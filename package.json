{
  "name": "event-mingle-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build:packages": "yarn workspaces --filter \"@event-mingle/*\" run build",
    "build:apps": "yarn workspaces --filter \"!@event-mingle/*\" run build",
    "build": "yarn build:packages && yarn build:apps",
    "dev": "yarn workspaces run dev",
    "lint": "yarn workspaces run lint",
    "clean": "yarn workspaces run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prisma:generate": "yarn workspace @event-mingle/database prisma generate"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "packageManager": "yarn@1.22.19",
  "dependencies": {
    "event-mingle-monorepo": "file:"
  }
}
